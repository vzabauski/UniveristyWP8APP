<Page
    x:Class="UserDB.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UserDB"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBox x:Name="login_textbox" Margin="75,143,75,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" TextChanged="TextBox_TextChanged" PlaceholderText="Login"/>
        <Button Content="Enter&#xD;&#xA;" HorizontalAlignment="Stretch" Margin="75,313,75,0" VerticalAlignment="Top" Click="Button_Click"/>
        <PasswordBox x:Name="password_textbox" Margin="75,224,75,0" VerticalAlignment="Top" PlaceholderText="Password" Password="password"/>

    </Grid>
</Page>
